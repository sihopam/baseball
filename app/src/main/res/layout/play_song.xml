<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/ttrrt">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="play"
        android:id="@+id/play_button"
        android:onClick="play"
        android:background="@drawable/start"
        android:layout_alignTop="@+id/stop_button"
        android:layout_toLeftOf="@+id/play_song"
        android:layout_toStartOf="@+id/play_song" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="pause"
        android:id="@+id/pause_button"
        android:onClick="pause"
        android:background="@drawable/pause"
        android:layout_alignBottom="@+id/stop_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="stop"
        android:id="@+id/stop_button"
        android:onClick="stop"
        android:background="@drawable/stop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/play_song"
        android:layout_toEndOf="@+id/play_song"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/play_song"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/play_song"
        android:textSize="40dp"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/profile"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

</RelativeLayout>