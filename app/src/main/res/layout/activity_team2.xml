<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="기아 타이거즈"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="50dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_gravity="bottom|center_horizontal">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button21"
            android:layout_gravity="left|top"
            android:background="@drawable/kanghanwool2"
            android:onClick="Button21" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button22"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/kimjuchan2"
            android:onClick="Button22" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button23"
            android:layout_gravity="right|top"
            android:background="@drawable/kimminwoo2"
            android:onClick="Button23" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button24"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/kimwonsub2"
            android:onClick="Button24" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button25"
            android:layout_gravity="center"
            android:background="@drawable/leebumho2"
            android:onClick="Button25" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button26"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/leehonggoo2"
            android:onClick="Button26" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button27"
            android:layout_gravity="left|bottom"
            android:background="@drawable/najiwan2"
            android:onClick="Button27" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button28"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/pill2"
            android:onClick="Button28" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/Button29"
            android:layout_gravity="right|bottom"
            android:background="@drawable/shinjonggil2"
            android:onClick="Button29" />
    </FrameLayout>

</FrameLayout>